<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:weightSum="50" >
    
    <TableRow
        android:layout_weight="10"
        android:weightSum="50" >

        <ImageButton
            android:id="@+id/imageButton_ch_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="10"
            android:background="@drawable/mythmote_button"
            android:src="@drawable/tv_plus" />
    
	     <ImageButton
	         android:id="@+id/imageButton_nav_info"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:layout_marginBottom="1dp"
	         android:layout_marginRight="1dp"
	         android:layout_marginTop="1dp"
	         android:layout_weight="10"
	         android:background="@drawable/mythmote_button"
	         android:src="@drawable/info" />
	
	    <ImageButton
	        android:id="@+id/imageButton_nav_up"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_marginTop="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/up" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_nav_tvguide"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_marginTop="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/guide" />

	    <ImageButton
	        android:id="@+id/imageButton_vol_up"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_marginTop="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/speaker_plus" />
    
    </TableRow>
    
    
    <TableRow android:layout_weight="10"
        android:weightSum="50">

        <ImageButton
            android:id="@+id/imageButton_ch_last"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="10"
            android:background="@drawable/mythmote_button"
            android:src="@drawable/tv_back" />
    
	     <ImageButton
	         android:id="@+id/imageButton_nav_left"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:layout_marginBottom="1dp"
	         android:layout_marginRight="1dp"
	         android:layout_weight="10"
	         android:background="@drawable/mythmote_button"
	         android:src="@drawable/left" />
	
	    <ImageButton
	        android:id="@+id/imageButton_nav_select"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/square" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_nav_right"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/right" />

	    <ImageButton
	        android:id="@+id/imageButton_vol_mute"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/speaker_off" />
    
    </TableRow>
    
    <TableRow android:layout_weight="10"
        android:weightSum="50">

        <ImageButton
            android:id="@+id/imageButton_ch_down"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="10"
            android:background="@drawable/mythmote_button"
            android:src="@drawable/tv_minus" />
    
	     <ImageButton
	         android:id="@+id/imageButton_nav_cancel"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:layout_marginBottom="1dp"
	         android:layout_marginRight="1dp"
	         android:layout_weight="10"
	         android:background="@drawable/mythmote_button"
	         android:src="@drawable/cancel" />
	
	    <ImageButton
	        android:id="@+id/imageButton_nav_down"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/down" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_nav_menu"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/menu" />

	    <ImageButton
	        android:id="@+id/imageButton_vol_down"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/speaker_minus" />
    
    </TableRow>
    
    <TableRow android:layout_weight="10"
        android:weightSum="40">
    
	     <ImageButton
	         android:id="@+id/imageButton_mediactrl_rec"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:layout_marginBottom="1dp"
	         android:layout_marginLeft="1dp"
	         android:layout_marginRight="1dp"
	         android:layout_weight="10"
	         android:background="@drawable/mythmote_button"
	         android:src="@drawable/rec" />
	
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_stop"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/stop" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_pause"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/pause" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_play"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/play" />
    
    </TableRow>
    
    
    <TableRow android:layout_weight="10"
        android:weightSum="40">
    
	     <ImageButton
	         android:id="@+id/imageButton_mediactrl_prev"
	         android:layout_width="match_parent"
	         android:layout_height="match_parent"
	         android:layout_marginBottom="1dp"
	         android:layout_marginLeft="1dp"
	         android:layout_marginRight="1dp"
	         android:layout_weight="10"
	         android:background="@drawable/mythmote_button"
	         android:src="@drawable/skipbk" />
	
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_rew"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/rw" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_ff"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/ff" />
	    
	    <ImageButton
	        android:id="@+id/imageButton_mediactrl_next"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="1dp"
	        android:layout_marginRight="1dp"
	        android:layout_weight="10"
	        android:background="@drawable/mythmote_button"
	        android:src="@drawable/skipfw" />
    
    </TableRow>
    
    
    
</TableLayout>