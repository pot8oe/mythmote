<?xml version="1.0" encoding="utf-8"?>

<TableLayout android:id="@+id/TableLayout01" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="fill_parent" android:isScrollContainer="true" android:stretchColumns="0,1,2,3,4,5,6" android:weightSum="3">

<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:weightSum="7">
<Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:autoText="false" android:id="@+id/ButtonRecord" android:drawableTop="@drawable/rec" android:text="@string/rec_str"/>
<Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/ButtonStop" android:drawableTop="@drawable/stop" android:text="@string/stop_str"/>
<Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:drawableTop="@drawable/pause" android:id="@+id/ButtonPause"  android:text="@string/pause_str"/>
<Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/ButtonPlay" android:drawableTop="@drawable/play" android:text="@string/play_str"/>
<Button android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="wrap_content" android:text="@string/vol_up_str" android:id="@+id/ButtonVolUp" android:drawableTop="@drawable/speaker_plus"/>
<Button android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="wrap_content" android:text="@string/mute_str" android:id="@+id/ButtonMute" android:drawableTop="@drawable/speaker_off"/>
<Button android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="wrap_content" android:text="@string/vol_down_str" android:id="@+id/ButtonVolDown" android:drawableTop="@drawable/speaker_minus"/>
</TableRow>

<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:weightSum="7">
<Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:text="@string/previous_str" android:drawableTop="@drawable/skipbk" android:id="@+id/ButtonSkipBack"/>
<Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:drawableTop="@drawable/rw" android:text="@string/rw_str" android:id="@+id/ButtonRew"/>
<Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:drawableTop="@drawable/ff" android:text="@string/ff_str" android:id="@+id/ButtonFF"/>
<Button android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:text="@string/next_str" android:drawableTop="@drawable/skipfw" android:id="@+id/ButtonSkipForward"/>
<Button android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="wrap_content" android:text="@string/ch_up_str" android:id="@+id/ButtonChUp" android:drawableTop="@drawable/tv_plus"/>
<Button android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="wrap_content" android:text="@string/ch_return_str" android:id="@+id/ButtonChReturn" android:drawableTop="@drawable/tv_back"/>
<Button android:layout_weight="1" android:layout_height="fill_parent" android:layout_width="wrap_content" android:text="@string/ch_down_str" android:id="@+id/ButtonChDown" android:drawableTop="@drawable/tv_minus"/>
</TableRow>
	
	
<TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:weightSum="6">


</TableRow>
	
</TableLayout>
