<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Theme_custom_dark_glow" parent="android:Theme.Holo">
    	<item name="android:buttonStyle" >@style/button_dark_glow</item>
    	<item name="android:imageButtonStyle" >@style/imagebutton_dark_glow</item>
    	<item name="android:windowBackground">@color/dark_glow_app_background</item>
    </style>

    <style name="button_dark_glow" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/mythmote_button_dark_glow</item>
        <item name="android:textColor">@color/mythmote_button_dark_glow_button_text_color</item>
    </style>
    
    <style name="imagebutton_dark_glow" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/mythmote_button_dark_glow</item>
        <item name="android:textColor">@color/mythmote_button_dark_glow_button_text_color</item>
    </style>
    
</resources>
