<?xml version="1.0" encoding="utf-8"?>

  
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ScrollView01" android:layout_width="match_parent" android:layout_height="match_parent">

<TableLayout android:id="@+id/TableLayout01" android:layout_width="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android" android:stretchColumns="0,1,2" android:layout_height="wrap_content">
	<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/home_str" android:id="@+id/ButtonJump1"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/live_tv_str" android:id="@+id/ButtonJump2"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rec_tv_str" android:id="@+id/ButtonJump3"/>
	</TableRow>
	
	<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/music_str" android:id="@+id/ButtonJump4"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/videos_str" android:id="@+id/ButtonJump5"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/status_str" android:id="@+id/ButtonJump6"/>
	</TableRow>
	
	<TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	</TableRow>
	
	<TableRow android:id="@+id/TableRow04" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/ButtonInfo" android:text="@string/info_str" android:drawableTop="@drawable/info"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="fill_parent" android:bufferType="normal" android:autoText="false" android:drawableTop="@drawable/up" android:text="@string/up_str" android:id="@+id/ButtonUp"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="fill_parent" android:drawableTop="@drawable/guide" android:id="@+id/ButtonGuide" android:text="@string/guide_str"/>
	</TableRow>
	
	<TableRow android:id="@+id/TableRow05" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="fill_parent" android:drawableTop="@drawable/left" android:text="@string/left_str" android:id="@+id/ButtonLeft"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="fill_parent" android:drawableTop="@drawable/square" android:text="@string/select_str" android:id="@+id/ButtonSelect"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="fill_parent" android:drawableTop="@drawable/right" android:text="@string/right_str" android:id="@+id/ButtonRight"/>
	</TableRow>
	
	<TableRow android:id="@+id/TableRow06" android:layout_width="wrap_content" android:layout_height="wrap_content">
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="fill_parent" android:cursorVisible="true" android:id="@+id/ButtonEsc" android:text="@string/cancel_str" android:drawableTop="@drawable/cancel"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="fill_parent" android:drawableTop="@drawable/down" android:text="@string/down_str" android:id="@+id/ButtonDown"/>
		<tkj.android.homecontrol.mythmote.ui.AutoRepeatButton android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/ButtonMenu" android:text="@string/menu_str" android:drawableTop="@drawable/menu"/>
	</TableRow>

</TableLayout>
</ScrollView>
